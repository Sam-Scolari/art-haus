---
type Props = {
  href?: string;
  outline?: boolean;
  white?: boolean;
  newTab?: boolean;
};

const { href, outline, newTab, white } = Astro.props;
---

<a
  href={href}
  target={newTab ? "_blank" : ""}
  rel={newTab ? "noopener noreferrer" : ""}
  class={`font-nunito px-8 py-3 text-lg rounded-full w-fit ${
    outline
      ? "text-white shadow-[inset_0px_0px_0px_3px_white]"
      : white
      ? "text-black bg-white"
      : "text-white bg-black"
  }`}
>
  <slot />
</a>
